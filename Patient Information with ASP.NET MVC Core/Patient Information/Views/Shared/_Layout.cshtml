<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patient_Information</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Patient_Information.styles.css" asp-append-version="true" />

    <script type="text/javascript">
        function LoadDataNCD(NCDId = null) {
            var NCDContainer = $("#NCDContainer");
            $.ajax({
                url: "/Patients/AddNewNCD/" + NCDId ?? "",
                type: "GET",
                success: function (data) {
                    NCDContainer.append(data);
                }
            });
        }
        $(document).on("click", "#btnAddNCD", function (e) {
            e.preventDefault();
            LoadDataNCD();
        });

        function LoadDataAllergies(AllergiesId = null) {
            var AllergiesContainer = $("#AllergiesContainer");
            $.ajax({
                url: "/Patients/AddNewAllergies/" + AllergiesId ?? "",
                type: "GET",
                success: function (data) {
                    AllergiesContainer.append(data);
                }
            });
        }
        $(document).on("click", "#btnAddAllergies", function (e) {
            e.preventDefault();
            LoadDataAllergies();
        });
        $(document).on("click", "#btnDelete", function (e) {
            e.preventDefault();
            $(this).parent().parent().remove();
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: green; color:white;">
        <div class="container-fluid px-5">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand">HFRCS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Home" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Patients" class="nav-link">Patient Information</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid px-5">
        @RenderBody()
    </div>
@*     <footer class="container-fluid">
        <p class="text-center">&copy; @DateTime.Now.Year - Patient Information</p>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
