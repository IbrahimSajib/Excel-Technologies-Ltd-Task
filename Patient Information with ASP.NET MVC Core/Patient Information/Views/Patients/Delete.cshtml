@model Patient_Information.Models.Patient

@{
    ViewData["Title"] = "Delete";
}


<div class="card row col-lg-8 mx-auto mt-3">
    <h1 class=" card-header alert alert-danger">Are you sure you want to delete this?</h1>
    <div class="card-body mx-4">
        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.PatientName) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.PatientName)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Diseases.DiseasesName) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.Diseases.DiseasesName)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Epilepsy) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.Epilepsy)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>Other NCDs :</b>
            </div>
            <div class="col-5">
                <ul>
                    @foreach (var item in Model.NCD_Details)
                    {
                        <li>@item.NCD.NCDName</li>
                    }
                </ul>
            </div>
        </div>
        
        
        <div class="row mb-2">
            <div class="col-2">
                <b>Allergies :</b>
            </div>
            <div class="col-5">
                <ul>
                    @foreach (var item in Model.AllergiesDetails)
                    {
                        <li>@item.Allergies.AllergiesName</li>
                    }
                </ul>
            </div>
        </div>


        <form asp-action="Delete">
            <input type="hidden" asp-for="PatientId" />
            <div class="row">
                <div class="offset-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>