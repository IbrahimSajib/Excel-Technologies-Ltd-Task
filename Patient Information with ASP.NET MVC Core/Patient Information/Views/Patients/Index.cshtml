@model IEnumerable<Patient_Information.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<div class="card mt-2 mb-2">
    <div class="card-header">
        <h2 class="alert alert-success text-center">Patient Information</h2>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus"></i> Add New</a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-success">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PatientName)
                    </th>

                    <th>
                        Diseases Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Epilepsy)
                    </th>
                    <th>
                        Other NCDs
                    </th>
                    <th>
                        Allergies
                    </th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diseases.DiseasesName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Epilepsy)
                        </td>
                        <td>
                            @foreach (var n in item.NCD_Details)
                            {
                                <p>@n.NCD.NCDName</p>
                            }
                        </td>
                        <td>
                            @foreach (var a in item.AllergiesDetails)
                            {
                                <p>@a.Allergies.AllergiesName</p>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PatientId" class="btn btn-warning btn-sm me-2"><i class="fa fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.PatientId" class="btn btn-danger btn-sm me-2"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>